# ============================================
# KIREMON PRODUCTION ENVIRONMENT CONFIGURATION
# API Only (Frontend on Vercel, DB on Supabase)
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# ===================
# SUPABASE DATABASE (Required)
# ===================
# Get from Supabase Dashboard > Settings > Database > Connection string
SUPABASE_CONNECTION_STRING=User Id=postgres.xxxxx;Password=your_password;Server=;Port=5432;Database=postgres;SSL Mode=Require;Trust Server Certificate=true

# ===================
# JWT AUTH (Required)
# ===================
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=your_super_secret_jwt_key_min_32_chars_long
JWT_ISSUER=
JWT_AUDIENCE=
JWT_EXPIRATION_DAYS=

# ===================
# ADMIN SEED (Required)
# ===================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=YourSecureAdminPassword123!

# ===================
# EMAIL SMTP (Optional but recommended)
# ===================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Kiremon Support
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_app_password

# ===================
# URLS & CORS
# ===================
# Your Vercel frontend URL
FRONTEND_URL=https://kiremon.vercel.app
FRONTEND_URL_WWW=https://www.kiremon.vercel.app
FRONTEND_URL_LOCAL=http://localhost:3000

# ===================
# API PORT
# ===================
API_PORT=5000

# ===================
# RECAPTCHA (Optional)
# ===================
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
